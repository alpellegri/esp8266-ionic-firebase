{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/test**",
        "function": "test"
      },
      {
        "source": "/auth**",
        "function": "auth"
      },
      {
        "source": "/token**",
        "function": "token"
      },
      {
        "source": "/ha**",
        "function": "ha"
      }
    ],
    "ignore": [
      "firebase.json",
      "database-rules.json",
      "functions"
    ],
    "headers": [{
      "source" : "**/*.@(js|html)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }]
  }
}
